<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN"
"http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node>
  <interface name="org.freedesktop.DBus.Introspectable">
    <method name="Introspect">
      <arg direction="out" type="s"/>
    </method>
  </interface>
  <interface name="com.example.Greetable">
    <method name="greeting">
      <arg direction="out" type="s"/>
    </method>
  </interface>
  <interface name="com.example.Calculable">
    <method name="add">
      <arg direction="in" type="i"/>
      <arg direction="in" type="i"/>
      <arg direction="out" type="i"/>
    </method>
    <method name="sub">
      <arg direction="in" type="i"/>
      <arg direction="in" type="i"/>
      <arg direction="out" type="i"/>
    </method>
    <method name="mul">
      <arg direction="in" type="i"/>
      <arg direction="in" type="i"/>
      <arg direction="out" type="i"/>
    </method>
  </interface>
  <interface name="com.example.Helloable">
    <method name="hello">
      <arg direction="in" type="s"/>
      <arg direction="out" type="s"/>
    </method>
  </interface>
  <interface name="com.example.Nameable">
    <method name="full_name">
      <arg direction="in" type="s"/>
      <arg direction="in" type="s"/>
      <arg direction="out" type="s"/>
    </method>
  </interface>
</node>
